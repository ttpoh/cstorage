<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/con_bg">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="CONCERT"
        android:textAlignment="center"
        android:textColor="@color/con_blue"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_addc_img"
        android:layout_width="270dp"
        android:layout_height="230dp"
        android:layout_below="@id/textView4"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/concert" />

    <EditText
        android:id="@+id/con_add_title"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@id/btn_addc_img"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_con"
        android:padding="10dp"
        android:hint="Title or Jenre" />

    <EditText
        android:id="@+id/con_add_performer"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@id/con_add_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_con"
        android:hint="Performer"
        android:padding="10dp" />

    <EditText
        android:id="@+id/con_add_review"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:layout_below="@id/con_add_performer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/border_con"
        android:hint="review"
        android:padding="10dp" />


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@id/con_add_review"
        android:layout_centerHorizontal="true"
        android:background="@color/con_bg">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_addc_cancle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/shape_button_con"
            android:padding="5dp"
            android:text="CANCLE"
            android:textColor="@color/con_blue"
            android:textSize="10dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_addc_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toRightOf="@id/btn_addc_cancle"
            android:layout_weight="1"
            android:background="@drawable/shape_button_con"
            android:padding="5dp"
            android:text="SAVE"
            android:textColor="@color/con_blue"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>