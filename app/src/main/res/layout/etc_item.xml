<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/etc_sky"
    tools:context="etc.Activity_etc_list">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/etc_list_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border_etc"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/etc" />

        <TextView
            android:id="@+id/etclist_title"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/etc_list_img"
            android:background="@drawable/border_etc"
            android:padding="5dp"
            android:text="Title"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/etclist_date"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/etclist_title"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/etc_list_img"
            android:background="@drawable/border_etc"
            android:padding="5dp"
            android:text="date"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etclist_review"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/etclist_title"
            android:background="@drawable/border_etc"
            android:padding="5dp"
            android:text="review" />
    </RelativeLayout>



</LinearLayout>