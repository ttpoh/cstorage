<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/book_grey"
    tools:context="book.Activity_book_list">

    <TextView
        android:id="@+id/bookListTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="49dp"
        android:gravity="center"
        android:background="@drawable/shape_button_book"
        android:text="BOOK LIST"
        android:textSize="50sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/book_search"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_addb_img"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_book"
        android:hint="Search"
        android:padding="10dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_b_search"
            android:background="@drawable/shape_button_book"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="search" />
    </LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewp_rank"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_b_back"
            android:background="@drawable/shape_button_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="back" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_b_add"
            android:background="@drawable/shape_button_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="ADD YOUR STORY" />
    </LinearLayout>


</LinearLayout>