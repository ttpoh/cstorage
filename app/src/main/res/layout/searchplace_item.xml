<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/book_grey"
    tools:context="book.Activity_book_list">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/search_title"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/border_booklist"
            android:padding="5dp"
            android:text="place"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/search_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/search_title"
            android:background="@drawable/border_booklist"
            android:padding="5dp"
            android:text="category"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/search_address"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/search_category"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/border_booklist"
            android:padding="5dp"
            android:text="address"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/search_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/search_category"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/search_address"
            android:background="@drawable/border_booklist"
            android:padding="5dp"
            android:text="phone"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>



</LinearLayout>